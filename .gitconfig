[core]
    editor = vim
[user]
    email = jatwell@alexinc.com
    name = Jake Atwell
[alias]
    a   = add
    aa  = add --all
    ap  = add --patch
    b   = branch
    ba  = branch --all
    cm  = commit --verbose
    cma = commit --amend --verbose
    co  = checkout
    cob = checkout -b
    ev  = !vim ~/.gitconfig
    ek  = !vim ~/.keepers/git
    d   = diff
    ds  = diff --staged
    ;l   = log --stat
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    merge   = merge --no-ff
    pull = pull --ff-only
    ; --no-ff and --ff-only option recommendations
    ; https://stackoverflow.com/a/9069127
    rb  = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    rbs = rebase --skip
    s   = status
    sh  = show
[push]
    default = simple
